{
  "name": "ITE 18 Group Activity 2 - Beach Sunset",
  "private": true,
  "version": "1.0.0",
  "description": "Beach Sunset Environment - Electron.js + Three.js Application",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.ite18.beachsunset",
    "productName": "Beach Sunset Environment",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "vite": "^7.1.11",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "lil-gui": "^0.17.0",
    "three": "^0.148.0"
  }
}
